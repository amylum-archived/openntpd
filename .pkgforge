name 'openntpd'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '5.0-1',
    checksum: '0703e1a5406fea7aa0072034e815fc2b3188151732ec61b134b0e54aa3e752ab'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  mandir: '/usr/share/man',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-privsep-user': 'ntp',
  'with-privsep-path': '/run/openntpd/'
)

cflags
harden

patch '17aa5d98191c4dc85d0645443fc97a12601ae8da.patch'
patch 'b32c42c989016f0369b93c8ab1fcff27e911f096.patch'
patch '90a4fa1607ee3b7b91cf518b251e402eb4c6bd87.patch'

build do
  run './autogen.sh'
  configure
  make
  install
  rm 'var'
end

test do
  # TODO: add tests
end

name 'openntpd'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': '4.10-1'
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  mandir: '/usr/share/man',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-privsep-user': 'ntp',
  'with-privsep-path': '/run/openntpd/'
)

cflags
harden

patch '6b32cedc37296d836d93f370923b8e0d2e8eee1b.patch'
patch '82143ad04705a2f5866c5719a58bb42afcf3588f.patch'
patch 'optargs_fix.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end

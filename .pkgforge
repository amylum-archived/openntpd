name 'openntpd'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  mandir: '/usr/share/man',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-privsep-user': 'ntp',
  'with-privsep-path': '/run/openntpd/'
)

cflags
harden

patch 'dead-def.patch'

build do
  run './autogen.sh'
  configure
  make
  install
  rm 'var'
end

test do
  # TODO: add tests
end

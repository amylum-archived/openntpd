name 'openntpd'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': '4.9-1'
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  mandir: '/usr/share/man',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-privsep-user': 'ntp',
  'with-privsep-path': '/run/openntpd/'
)

cflags
harden

patch 'libcrypto.patch'
patch 'ca8e7f797cb06e3b933ed250c9e7fc5d875d7de3.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end

name 'openntpd'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.19-1',
    checksum: 'de68cab17c2354ee660b269ccca30e275a9314563ebdfb4f427fc5ebe1395f30'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  mandir: '/usr/share/man',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-privsep-user': 'ntp',
  'with-privsep-path': '/run/openntpd/'
)

cflags
harden

patch 'dead-def.patch'

build do
  run './autogen.sh'
  configure
  make
  install
  rm 'var'
end

test do
  # TODO: add tests
end

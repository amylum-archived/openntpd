name 'openntpd'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  mandir: '/usr/share/man',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-privsep-user': 'ntp',
  'with-privsep-path': '/run/openntpd/'
)

cflags
harden

patch 'dead-def.patch'

build do
  run './autogen.sh'
  configure
  make
  install
  rm 'var'
end

test do
  # TODO: add tests
end

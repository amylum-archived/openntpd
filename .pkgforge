name 'openntpd'
org 'amylum'

licenses 'COPYING'

deps(
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  mandir: '/usr/share/man',
  sysconfdir: '/etc',
  localstatedir: '/var',
  'with-privsep-user': 'ntp',
  'with-privsep-path': '/run/openntpd/'
)

cflags
harden

patch 'sin_len-fix.patch'
patch 'dead-def.patch'

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
